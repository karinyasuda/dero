<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sukusuku.dero.Stage4Photo"
    tools:showIn="@layout/activity_stage4_photo">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(どこでもドア)"
        android:id="@+id/button7"
        android:textSize="20dp"
        android:onClick="toStage4DokodemoDoorFromPhoto"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(メッセージへ)"
        android:id="@+id/button8"
        android:onClick="toStage4MessageFromPhoto"
        android:layout_marginTop="77dp"
        android:layout_below="@+id/buttonDokodemodoorKey"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDokodemodoorKey"
        android:src="@drawable/key"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="clickDokodemodoorKey" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="どこでもドアの鍵"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

</RelativeLayout>
