<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_front" tools:context="com.sukusuku.android.dero.Front">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/backimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/gamen"
        android:layout_marginLeft="0dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/frontRight"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:onClick="frontRight"
        android:src="@drawable/arrows" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/frontLeft"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/arrows2"
        android:onClick="frontLeft" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="front"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:textSize="50dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="705dp"
        android:id="@+id/door"
        android:src="@drawable/door"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:onClick="goal"
        android:layout_alignParentStart="false" />
</RelativeLayout>
